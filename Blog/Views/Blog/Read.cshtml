@model Blog.Models.Blog
@{
    ViewBag.Title = "Редактировать Блог";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Блог № @Model.Id</h2>

<fieldset>
    @Html.AntiForgeryToken()
    <legend> БЛОГ </legend>
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MainText, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayTextFor(model => model.MainText)          
            </div>
        </div>
         <div class="form-group">
         @Html.LabelFor(model => model.Tags)
         <ul>
        @foreach (var item in Model.Tags)
                {
                    @*<li>@blogs.Name (@blogs.Tag)</li>*@
                    <li>@item.Name</li>                  
                }
         </ul>
         </div>

            @if (Model.ImageData == null)
            {
                <div class="form-control-static">Нет картинки</div>
            }
            else
            {
                @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                 + Convert.ToBase64String(Model.ImageData) + "\" />")
            }
        </div>
    <div class="panel-footer">
        @Html.ActionLink("Вернуться к списку Блогов", "Index", null, new
        {
            @class = "btn btn-default"
        })
    </div>

</fieldset>